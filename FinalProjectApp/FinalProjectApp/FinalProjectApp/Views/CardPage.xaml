<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProjectApp.Views.CardPage"
			 xmlns:views="clr-namespace:FinalProjectApp.Views;assembly=FinalProjectApp"
			 Title="My Card">
	<views:BaseContentPage.Content>
		<StackLayout>
			<!--<Label Text="{Binding Balance}" />
			<Button Command="{Binding AddPoints}" />-->
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
			</Grid>
			<Label Grid.Column="0" Grid.Row="0" Text="{Binding Name}"/>
			<Label Grid.Column="0" Grid.Row="1" Text="{Binding CardNumber}"  />
			<Label Grid.Column="0" Grid.Row="2" Text="{Binding Balance}"  />
			<Label Grid.Column="1" Grid.Row="0" Text="Edit"  />
			<Button Text="Sign Out" Command="{Binding SignOutCommand}" />
			<Label Text="" />
		</StackLayout>
	</views:BaseContentPage.Content>
</views:BaseContentPage>